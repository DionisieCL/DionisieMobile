@model Schoolager.Web.Data.Entities.Subject

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid p-5">
    <div class="row mb-3 bg-white">
        <div class="p-3 d-flex justify-content-between align-items-center border-bottom">
            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
            <h2>Edit Subject</h2>
        </div>
        <div class="px-3 pt-3">
            <flash dismissable="true"/>
        </div>
        <div class="px-3">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                    <div class="col-8">
                        <div class="mb-4">
                             <label asp-for="Name" class="control-label"></label>
                             <input asp-for="Name" class="form-control" />
                             <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="">
                            <a asp-action="Index" class="btn btn-outline-danger">Cancel</a>
                            <button asp-action="Edit" type="submit" value="Save" class="btn btn-outline-success">Save</button>
                        </div>
                    </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

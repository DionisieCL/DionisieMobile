@model Schoolager.Web.Data.Entities.Subject

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid p-5">
    <div class="bg-white">
        <div class="px-3 p-3 d-flex justify-content-between align-items-center">

            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
            <h2>New Lesson</h2>
        </div>
        <div class="d-flex justify-content-center align-items-center w-100">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-outline-danger">Cancel</a>
                    <button asp-action="Create" type="submit" value="Create" class="btn btn-outline-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model Schoolager.Web.Data.Entities.Holiday

@{
    ViewData["Title"] = "Create";
}
<div class="container-fluid p-5">
    <div class="bg-white">
        <div class="p-3 d-flex justify-content-between align-items-center border-bottom">
            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
            <h2>New Holiday</h2>
        </div>
        <div class="px-3 pt-3">
            <flash dismissable="true"/>
        </div>
        <div class="p-3 d-flex justify-content-center align-items-center w-100">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-4">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="StartTime" class="control-label"></label>
                    <input asp-for="StartTime" type="date" class="form-control" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="EndTime" class="control-label"></label>
                    <input asp-for="EndTime" type="date" class="form-control" />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <button type="submit" value="Save" class="btn btn-outline-success">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>



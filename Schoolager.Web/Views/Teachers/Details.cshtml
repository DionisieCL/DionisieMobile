@model Schoolager.Web.Data.Entities.Teacher

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid p-5">
    <div class="row mb-3 bg-white">
        <div class="p-3 d-flex justify-content-between align-items-center border-bottom">
            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
            <h2>Teacher Details</h2>
        </div>
        <div class="p-3">
            <div asp-action="Edit" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-3">
                        <div class="h-100">
                            <div class="image-preview border-opacity-50 d-flex justify-content-center align-items-center" style="background-image: url(@Url.Content(@Model.ImageFullPath))">
                            </div>
                        </div>
                    </div>
                    <div class="col-8">
                        <div class="mb-4">
                            <label asp-for="SubjectId" class="control-label"></label>
                            <input value="@ViewData["Subject"]" class="form-control" readonly/>
                        </div>
                        <div class="row mb-4">
                            <div class="col">
                                <label asp-for="FirstName" class="control-label"></label>
                                <input asp-for="FirstName" class="form-control" readonly/>
                            </div>
                            <div class="col">
                                <label asp-for="LastName" class="control-label"></label>
                                <input asp-for="LastName" class="form-control" readonly/>
                            </div>
                            <div class="col">
                                <label asp-for="DateOfBirth" class="control-label"></label>
                                <input asp-for="DateOfBirth" class="form-control" readonly/>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" readonly/>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col">
                                <label asp-for="Address" class="control-label"></label>
                                <input asp-for="Address" class="form-control" readonly/>
                            </div>
                            <div class="col">
                                <label asp-for="PhoneNumber" class="control-label"></label>
                                <input asp-for="PhoneNumber" class="form-control" readonly/>
                            </div>
                        </div>
                        <div class="">
                            <a asp-action="Edit" asp-route-id="@Model.Id" value="Save" class="btn btn-outline-primary">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

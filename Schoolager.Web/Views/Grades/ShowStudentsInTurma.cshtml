@model IEnumerable<Schoolager.Web.Data.Entities.Student>

@{
    ViewData["Title"] = "ShowStudentsInTurma";
}

<div class="container-fluid p-5">
    <div class="bg-white">
        <div class="px-3 p-3 d-flex justify-content-between align-items-center">
            <h1>Alunos do @Model.FirstOrDefault().Turma.Name</h1>
        </div>
        <div class="container-fluid">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ImageId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FullName)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            <img src="@Url.Content(item.ImageFullPath)" alt="Image" style="width:100px;height:150px;max-width:100%;height:auto"/>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>              
                        <td>
                            <a asp-action="ShowAllStudentGrades" asp-route-id="@item.Id">Notas</a>
                        </td>
                    </tr>
            }
                </tbody>
            </table>
        </div>
    </div>
</div>
@model IEnumerable<Schoolager.Web.Data.Entities.Turma>

@{
    ViewData["Title"] = "TeacherIndex";
}

<div class="container-fluid p-5">
    <div class="bg-white">
        <div class="px-3 p-3 d-flex justify-content-between align-items-center">
            <h2>Schedules</h2>
        </div>
        <div class="px-3 pb-3 table-responsive">
            <table class="table table-bordered table-hover" id="turmasTable">
                <thead>
                    <tr>
                        <th>Selected</th>
                        <th>Nome</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var turma in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => turma.Name)
                            </td>
                            <td class="align-middle">
                                <a asp-action="TurmaGrading" asp-route-id="@turma.Id" class="btn btn-outline-dark">
                                    Notas
                                    <i data-feather="book-open" stroke-width="1"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
	    $(document).ready(function () {
           // Datatable
            let table = $("#turmasTable").DataTable({
                "columnDefs": [
                    { "width": "1%", "targets": 1 }
                ]
            });
	    });

    </script>
}


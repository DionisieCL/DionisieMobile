@model Schoolager.Web.Models.Lessons.DoubtViewModel

@{
    ViewData["Title"] = "LessonDataDoubts";

    ViewData["Id"] = Model.Id;
}

<div class="container-fluid p-5">
    <div class="bg-white">
        <div class="mb-3">
            <partial name="_LessonDataNav" view-data="ViewData" />
        </div>
        <div class="pb-3 mx-3 d-flex justify-content-between align-items-center border-bottom">
            <a asp-action="LessonDataDoubts" asp-controller="Lessons" asp-route-id="@Model.LessonDataId" class="btn btn-outline-secondary">Back</a>
            <h3 class="m-0">@Model.Student.FullName</h3>
        </div>
        <div class="m-3">
            <p class="fs-5 m-0">@Model.Description</p>
        </div>
        @if (User.IsInRole("Student"))
        {
            <div class="m-3">
                @if(Model.Answer == null)
                {
                    <p class="fs-5 m-0">Your doubt has not been answered yet.</p>
                }
                else
                {
                    <p class="fs-5 m-0">@Model.Answer</p>
                }
            </div>            
        }

        @if (User.IsInRole("Teacher"))
        {
            <div class="mx-3">
                <form asp-action="LessonDataSummary" method="post">
                    <input asp-for="Id" type="hidden"/>
                    <input asp-for="LessonDataId" type="hidden"/>
                    <input asp-for="Description" type="hidden"/>
                    <div class="mb-2">
                        <label asp-for="Answer" class="control-label">Answer</label>
                        <textarea asp-for="Answer"class="form-control"></textarea>
                        <span asp-validation-for="Answer" class="text-secondary"></span>
                    </div>
                    <div class="mb-2">
                        <button asp-action="AnswerDoubt" type="submit" class="btn btn-outline-primary">Reply</button>
                    </div>
                </form>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
	    $(document).ready(function () {
            $('#doubts').addClass("active");
	    });
    </script>
}

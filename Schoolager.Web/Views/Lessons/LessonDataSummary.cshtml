@model Schoolager.Web.Models.Lessons.LessonDataViewModel

@{
    ViewData["Title"] = "LessonData";

    ViewData["Id"] = Model.Id;
}

<div class="container-fluid p-5">
    <div class="bg-white">
        <div class="mb-3">
            <partial name="_LessonDataNav" view-data="ViewData" />
        </div>
        @if (User.IsInRole("Teacher"))
        {
            <div class="mx-3">
                <form asp-action="LessonDataSummary" method="post">
                    <input asp-for="Id" type="hidden"/>
                    <div class="mb-2">
                        <label asp-for="Summary" class="control-label">Summary</label>
                        <textarea asp-for="Summary"class="form-control"></textarea>
                        <span asp-validation-for="Summary" class="text-secondary"></span>
                    </div>
                    <div class="mb-2">
                        <button asp-action="LessonDataSummary" type="submit" class="btn btn-outline-primary">Save</button>
                    </div>
                </form>
            </div>
        } else if (User.IsInRole("Student"))
        {
            <div class="m-3">
                @if(Model.Summary != null)
                {
                    <p class="fs-5 m-0">Summary</p>
                    <p class="fs-5 m-0">@Model.Summary</p>
                } else
                {
                    <p class="fs-5 m-0">There's no summary for this lesson.</p>
                }
            </div>
        }
        
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
	    $(document).ready(function () {
            $('#summary').addClass("active");
	    });
    </script>
}
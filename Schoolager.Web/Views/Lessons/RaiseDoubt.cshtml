@model Schoolager.Web.Models.Lessons.DoubtViewModel

@{
    ViewData["Title"] = "LessonData";

    ViewData["Id"] = Model.LessonDataId;
}

<div class="container-fluid p-5">
    <div class="bg-white">
        <div class="mb-3">
            <partial name="_LessonDataNav" view-data="ViewData" />
        </div>
        <div class="pb-3 mx-3 d-flex justify-content-between align-items-center border-bottom">
            <a asp-action="LessonDataDoubts" asp-controller="Lessons" asp-route-id="@Model.LessonDataId" class="btn btn-outline-secondary">Back</a>
            <h3 class="m-0">@Model.Student.FullName</h3>
        </div>
        <div class="mx-3">
            <form asp-action="RaiseDoubt" method="post">
                <input asp-for="Id" type="hidden"/>
                <input asp-for="LessonDataId" type="hidden"/>
                <input asp-for="StudentId" type="hidden"/>
                <div class="mb-2">
                    <label asp-for="Description" class="control-label">Description</label>
                    <textarea asp-for="Description"class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-secondary"></span>
                </div>
                <div class="mb-2">
                    <button asp-action="RaiseDoubt" type="submit" class="btn btn-outline-primary">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
	    $(document).ready(function () {
            $('#doubts').addClass("active");
	    });
    </script>
}
@model Schoolager.Web.Data.Entities.User

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="container-fluid p-5">
    <div class="row mb-3 bg-white">
        <div class="p-3 d-flex justify-content-between align-items-center border-bottom">
            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
            <h2>Student Details</h2>
        </div>
        <div class="p-3">
            <div asp-action="Edit" enctype="multipart/form-data" class="flex-fill">
                <div class="row">
                    <div class="col-3">
                        <div class="h-100">
                            <div class="image-preview border-opacity-50 d-flex justify-content-center align-items-center" style="background-image: url(@Url.Content(@Model.ImageFullPath))">
                            </div>
                        </div>
                    </div>
                    <div class="col-8">
                        <div class="row mb-4">
                            <div class="col">
                                <label asp-for="FirstName" class="control-label"></label>
                                <input asp-for="FirstName" class="form-control" readonly />
                            </div>
                            <div class="col">
                                <label asp-for="LastName" class="control-label"></label>
                                <input asp-for="LastName" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="mb-4"> 
                                <label asp-for="IsAdmin" class="control-label"></label>
                                <input asp-for="IsAdmin" disabled>
                                <span asp-validation-for="IsAdmin" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

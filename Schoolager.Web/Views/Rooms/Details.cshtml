@model Schoolager.Web.Data.Entities.Room

@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid p-5">
    <div class="row mb-3 bg-white">
        <div class="p-3 d-flex justify-content-between align-items-center border-bottom">
            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
            <h2>Room Details</h2>
        </div>
        <div class="p-3">
            <div asp-action="Edit" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-8">
                        <div class="row mb-4">
                            <div class="col">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" readonly/>
                            </div>
                        </div>
                        <div class="">
                            <a asp-action="Edit" asp-route-id="@Model.Id" value="Save" class="btn btn-outline-primary">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

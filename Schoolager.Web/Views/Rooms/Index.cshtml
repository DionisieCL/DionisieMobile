@model IEnumerable<Schoolager.Web.Data.Entities.Room>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid p-5">
    <div class="row mb-3 bg-white">
        <div class="p-3 d-flex justify-content-between align-items-center border-bottom">
            <a asp-action="Create" class="btn btn-outline-primary">New Room</a>
            <h2>Rooms</h2>
        </div>
        <div class="px-3 pt-3">
            <flash dismissable="true"/>
        </div>
        <div class="px-3 table-responsive">
            <table class="table table-bordered table-hover" id="tableRooms">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                            <td class="align-middle">
                                <div class="d-flex flex-row" id="@item.Id">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-success me-2">Details</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary me-2">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" id="btnDeleteRoom">Delete</a>
                                </div>
                            </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteDialog" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="deleteDialogLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content border border-light">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="deleteDialogLabel">Delete Room?</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this Room?
            </div>
            <div class="modal-footer">
                <button type="button" id="btnNoDelete" class="btn btn-outline-danger" data-bs-dismiss="modal">No</button>
                <button type="button" id="btnYesDelete" class="btn btn-outline-success">Yes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">

        $(document).ready(function() {
            let id = 0;

            // Delete
            $("a[id*=btnDeleteRoom]").click(function() {
                id = $(this).parent()[0].id;
                console.log($(this).parent()[0].id);
                $("#deleteDialog").modal("show");
                return false;
            });

            $("#btnNoDelete").click(function() {
                $("#deleteDialog").modal("hide");
                return false;
            });

            $("#btnYesDelete").click(function() {
                window.location.href = "/Rooms/Delete/" + id;
            });

            let tableRooms = $("#tableRooms").DataTable({
                "columnDefs": [
                    { "width": "50%", "targets": 0 },
                ]
            });
        });
    </script>
}

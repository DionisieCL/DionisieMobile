<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             xmlns:progressBar="clr-namespace:Syncfusion.XForms.ProgressBar;assembly=Syncfusion.SfProgressBar.XForms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Schoolager.Prism.Views.CityDetailPage"
             xmlns:ffSvg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
             Title="{Binding Title}" >
    <ScrollView>

        <StackLayout >
            <progressBar:SfCircularProgressBar x:Name="CircularProgressBar" Progress="75" StartAngle="180" EndAngle="360" Scale="5" ShowProgressValue="False">
                <progressBar:SfCircularProgressBar.Content>
            <Frame Margin="25,20,25,0" CornerRadius="1000" BackgroundColor="LightSeaGreen">
            
          
                <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                        <RowDefinition Height="150"/>
                        <RowDefinition Height="150"/>
                    </Grid.RowDefinitions>
                <Label
                Grid.Row="0"
                Grid.Column="0"
                FontAttributes="Bold"
                Padding="35,115,30,-15"
                Text="{Binding WeatherDetail.Name}" TextColor="black" FontSize="20"/>
                <Label
                Grid.Row="1"
                Grid.Column="0"
                Padding="35,0,0,0"
                Text="{Binding WeatherDetail.Description}" TextColor="black" FontSize="Medium"/>
                <Grid
                    Grid.Row="0"
                    Grid.Column="1"
                    Padding="-50,120,0,0"
                    >
                    <Image Source="{Binding WeatherDetail.Icon}" Scale="4"/>
                </Grid>

            </Grid>
            </Frame>
            </progressBar:SfCircularProgressBar.Content>
            </progressBar:SfCircularProgressBar>
            <Grid Padding="10,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label
                Grid.Row="0"
                Grid.Column="0"
                FontAttributes="Bold"
                Text="Description:"/>
                <Label
                Grid.Row="0"
                Grid.Column="2"
                FontAttributes="Bold"
                Text="{Binding WeatherDetail.Description}" TextColor="black" FontSize="Large"/>
                <Grid
                    Grid.Row="0"
                    Grid.Column="1"
                    Padding="-8"
                    >
                    <Image Source="{Binding WeatherDetail.Icon}"/>
                </Grid>
                <Label
                Grid.Row="1"
                Grid.Column="0"
                FontAttributes="Bold"
                Text="Feels Like:"/>
                <Label
                Grid.Row="1"
                Grid.Column="1"
                FontAttributes="Bold">
                    <Label.FormattedText >
                        <FormattedString>
                            <Span Text="{Binding WeatherDetail.Feels_like}"/>
                            <Span Text="ºC"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Label
                Grid.Row="2"
                Grid.Column="0"
                FontAttributes="Bold"
                Text="Minimum Temperature:"/>
                <Label
                Grid.Row="2"
                Grid.Column="1"
                FontAttributes="Bold"
                >
                    <Label.FormattedText >
                        <FormattedString>
                            <Span Text="{Binding WeatherDetail.Temp_min}"/>
                            <Span Text="ºC"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Label
                Grid.Row="3"
                Grid.Column="0"
                FontAttributes="Bold"
                Text="Maximum Temperature"/>
                <Label
                Grid.Row="3"
                Grid.Column="1"
                FontAttributes="Bold"
               >
                    <Label.FormattedText >
                        <FormattedString>
                            <Span Text="{Binding WeatherDetail.Temp_max}"/>
                            <Span Text="ºC"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Label
                Grid.Row="4"
                Grid.Column="0"
                FontAttributes="Bold"
                Text="Humidity"/>
                <Label
                Grid.Row="4"
                Grid.Column="1"
                FontAttributes="Bold"
                Text="{Binding WeatherDetail.Humidity}" TextColor="black"/>
            </Grid>
        </StackLayout>
    </ScrollView>
</ContentPage>